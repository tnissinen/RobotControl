            android:minHeight="@dimen/seekBarMinHeight"
            android:progress="50" />

        <com.tnissinen.robotcontrol.SimulationView
            android:id="@+id/simuView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="right"
            android:layout_row="2" />

        <!-- row 4 -->
        <TextView
            android:id="@+id/servo4TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="2"
            android:layout_gravity="center_vertical"
            android:layout_row="3"
            android:gravity="center_vertical"
            android:text="@string/servo4"
            android:textSize="@dimen/servoTextSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/servo4SeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="10"
            android:layout_gravity="center_vertical"
            android:layout_row="3"
            android:minHeight="@dimen/seekBarMinHeight"
            android:progress="50" />

        <com.tnissinen.robotcontrol.SimulationView
            android:id="@+id/simuView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="right"
            android:layout_row="3" />

    </GridLayout>

